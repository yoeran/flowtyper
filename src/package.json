{
  "name": "flowtyper",
  "version": "1.0.0",
  "productName": "FlowTyper",
  "description": "Simple textwriter that deletes your work if you pause too long.",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.4.1",
    "electron-packager": "^8.3.0"
  },
  "scripts": {
    "start": "electron .",
    "clean:builds": "rm -rf ../build",
    "build:all": "electron-packager . --all --out=../build",
    "build:osx": "electron-packager . --platform=darwin --out=../build",
    "build:win": "electron-packager . --platform=win32 --out=../build",
    "build:linux": "electron-packager . --platform=linux --out=../build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yoeran/flowtyper.git"
  },
  "keywords": [
    "writing",
    "flow",
    "electron"
  ],
  "author": "Yoeran Luteijn",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/yoeran/flowtyper/issues"
  },
  "homepage": "https://github.com/yoeran/flowtyper#readme"
}
